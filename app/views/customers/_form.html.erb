<div class="row">
  <div class="span6 offset3">
    <% form_type ||= :edit %>
    <h1 style="text-align: center; text-decoration: underline"><%= t("scaffold.#{form_type.to_s}_wname", name:'Customer') %></h1>
    <BR>
    <%= form_for(@customer, html:{class:"form-scaffold"}) do |f| %>
        <% if @customer.errors.any? %>
            <div id="error_explanation">
              <h2><%= t("scaffold.error_explanation",errors: pluralize(@customer.errors.count, "error"), name: "customer") %> </h2>

              <ul>
                <% @customer.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>


        <%= f.label :firstname, class:'scaffold ' %>
        <%= f.text_field :firstname, class:'scaffold' %>


        <%= f.label :lastname, class:'scaffold ' %>
        <%= f.text_field :lastname, class:'scaffold' %>


        <%= f.label :email, class:'scaffold ' %>
        <%= f.text_field :email, class:'scaffold' %>

        <% if params[:action] == 'new' || params[:action] == 'create' %>
            <%= f.label :password, class: 'scaffold' %>
            <%= f.password_field :password, class: 'scaffold' %>

            <%= f.label :password_confirmation, "Confirmation", class: 'scaffold' %>
            <%= f.password_field :password_confirmation, class: 'scaffold' %>
        <% end %>

        <div style="text-align: center; margin-top: 20px">
          <%= f.submit 'Submit', class:'btn btn-large btn-primary' %>
          <%= link_to 'Back', customers_path, class: 'scaffold btn btn-large btn-primary'  %>
        </div>
    <% end %>
  </div>
</div>