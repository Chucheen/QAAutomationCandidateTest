<div class="row">
  <% @order_line ||= nil%>
  <div class="span6 offset3">
    <% form_type ||= :edit %>
    <h1 style="text-align: center; text-decoration: underline">Add To Cart</h1>
    <BR>
    <%= form_for(@order_line, html:{class:"form-scaffold"}) do |f| %>
        <div class="mrm" style="text-align: center"><span><strong>Product Name: </strong></span><span id="product-name"><%= @order_line.try(:product).try(:name)%></span></div>
        <%# f.label :order_id, class:'scaffold ' %>
        <%# f.number_field :order_id, class:'scaffold' %>


        <%# f.label :product_id, class:'scaffold ' %>
        <%= f.number_field :product_id, class:'scaffold', style: 'display: none' %>


        <%= f.label :qty, class:'scaffold ' %>
        <%= f.number_field :qty, class:'scaffold' %>

        <div>
          <strong><span class='pull-left mrm'>Unit Price: </span></strong><span id="unit_price_label"><%= (@order_line.try(:product).try(:price) || 0) %></span>
        </div>
        <%# f.text_field :unit_price, class:'scaffold' %>

        <div>
          <strong><span class='pull-left mrm'>Total Price: </span></strong><span id="total_price_label"><%= (@order_line.try(:product).try(:price) || 0) * (@order_line.try(:qty) || 0) %></span>
        </div>
        <%# f.text_field :total_price, class:'scaffold' %>

        <div style="text-align: center; margin-top: 20px">
          <%= f.submit 'Submit', class:'btn btn-large btn-primary' %>
        </div>
    <% end %>
  </div>
</div>