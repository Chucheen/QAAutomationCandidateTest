<div class="row">
  <div class="span6 offset3">
    <% form_type ||= :edit %>
    <h1 style="text-align: center; text-decoration: underline"><%= t("scaffold.#{form_type.to_s}_wname", name:'Product') %></h1>
    <BR>
    <%= form_for(@product, html:{class:"form-scaffold"}) do |f| %>
        <% if @product.errors.any? %>
            <div id="error_explanation">
              <h2><%= t("scaffold.error_explanation",errors: pluralize(@product.errors.count, "error"), name: "product") %> </h2>

              <ul>
                <% @product.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

        <%= f.label :name, class:'scaffold ' %>
        <%= f.text_field :name, class:'scaffold' %>

        <%= f.label :description, class:'scaffold ' %>
        <%= f.text_field :description, class:'scaffold' %>

        <%= f.label :price, class:'scaffold ' %>
        <%= f.number_field :price, class:'scaffold', :step => 0.01 %>


        <%= f.label :status, "Enabled", class:'scaffold pull-left' %>
        <%= f.check_box :status, class:'scaffold pull-left' %>

        <div class="clear" style="text-align: center; margin-top: 20px">
          <%= f.submit 'Submit', class:'btn btn-large btn-primary' %>
          <%= link_to 'Back', products_path, class: 'scaffold btn btn-large btn-primary'  %>
        </div>
    <% end %>
  </div>
</div>